rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /users/{userId} {
      allow read: if true;
      allow create: if request.resource.data.role == "user";
    }
    
    match /userdata/{userId} {
      allow read: if true;
    }
  }
}